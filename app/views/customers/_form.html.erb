<%= simple_form_for(@customer) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true %>
    <br>
    <%= f.input :matriculation_code, required: true %>
    <br>
    <% unless @customer.password.present? %>
      <%= f.input :password, required: true %>
      <br>
      <%= f.input :password_confirmation, required: true %>
      <br>
    <% end %>
  </div>
  <div class="form-actions">
    <div class='row'>
      <div class='col-lg-12 text-end'>
        <%# TODO implantar in_action?(%w[edit update]) para retorno personalizado %>
        <%= link_to t(:cancel, scope: %i[templates buttons defaults]), customers_path, class: "btn btn-outline-secondary border me-2" %>
        <%= f.button :submit, I18n.t(:submit, scope: %i[simple_form]), class: "btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
