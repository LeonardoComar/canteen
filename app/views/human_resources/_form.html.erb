<%= simple_form_for(@human_resource) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true %>
    <br>
    <%= f.input :phone, required: true %>
    <br>
    <%= f.input :document, required: true %>
    <br>
    <%= f.input :birth_date, required: true %>
    <br>
  </div>
  <div class="form-actions">
    <div class='row'>
      <div class='col-lg-12 text-end'>
        <%# TODO implantar in_action?(%w[edit update]) para retorno personalizado %>
        <%= link_to t(:cancel, scope: %i[templates buttons defaults]), human_resources_path, class: "btn btn-outline-secondary border me-2" %>
        <%= f.button :submit, I18n.t(:submit, scope: %i[simple_form]), class: "btn-primary" %>
      </div>
    </div>
  </div>
<% end %>